# Big Dill Pickleball - Environment Variables

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/bigdill?schema=public"

# Stripe (required for payments)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Public URL (used for Stripe redirect URLs)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Email (Resend - optional, for order confirmations)
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="orders@bigdillpickleball.com"

# OpenRouter (optional, for AI image generation)
OPENROUTER_API_KEY="sk-or-v1-..."
